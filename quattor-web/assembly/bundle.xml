<assembly>
  <id>bundle</id>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  
  <fileSets>
    <fileSet>
      <directory>src</directory>
      <outputDirectory>quattor-web-console</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>init-script</directory>
      <outputDirectory>etc/init.d</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>config</directory>
      <outputDirectory>etc/quattor-web-console</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>
