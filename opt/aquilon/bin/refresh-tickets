#!/bin/sh
USER=$1
if [ "$USER" = "" ]; then
    echo "usage: $0 <username>"
    exit 1
fi
HOSTNAME=$(hostname)
REALM=$(awk '/default_realm/ { print $3 }' /etc/krb5.conf)
export KRB5CCNAME=FILE:/var/spool/tickets/$USER
kinit -k -t /var/spool/keytabs/$USER $USER/${HOSTNAME}@$REALM
chown $USER /var/spool/tickets/$USER
